<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://kit.fontawesome.com/4d71df5d1c.js" crossorigin="anonymous"></script>
    <title>Carpetas</title>
</head>
<body>
    <h1>Carpetas</h1>
    <div id="folder-container">
        <% folders.forEach(folder => { %>
            <div class="folder">
                <div class="single-chart">
                    <svg viewBox="0 0 36 36" class="circular-chart blue">
                      <path class="circle-bg"
                        d="M18 2.0845
                          a 15.9155 15.9155 0 0 1 0 31.831
                            a 15.9155 15.9155 0 0 1 0 -31.831"
                        />
                        <path class="circle"
                        stroke-dasharray="0, 100"
                        d="M18 2.0845
                            a 15.9155 15.9155 0 0 1 0 31.831
                            a 15.9155 15.9155 0 0 1 0 -31.831"
                        />
                        <text x="18" y="20.35" class="percentage">0B</text>
                    </svg>
                </div>
                <img src="/img/folders/person-protection-security-svgrepo-com.svg" alt="user icon">
                <h2><%= folder%></h2>
                <a class="folder-info" href="/api/admin/folders/info/<%= folder%>"><i class="fa-solid fa-info"></i></a>
                <button>
                    <a class="folder-view" href="/api/admin/folders/files/<%= folder%>"><i class="fa-solid fa-folder-closed"></i></a>
                </button>
            </div>
        <% }) %>
    </div>
    <script src="/js/folders_init.js"></script>
</body>
</html>